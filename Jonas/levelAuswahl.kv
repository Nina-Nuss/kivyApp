            text: root.tSQL[1]
        LevelButton:
            background_down: root.test[1]
            background_normal: root.test[1]
        LevelLabel:
            text: root.tSQL[2]
        LevelButton:
            background_down: root.test[2]
            background_normal: root.test[2]
        LevelLabel:
            text: root.tSQL[3]
        LevelButton:
            background_down: root.test[3]
            background_normal: root.test[3]